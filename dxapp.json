{
  "name": "eggd_somalier_extract",
  "title": "eggd_somalier_extract",
  "summary": "Extracts the sites needed to do sex check",
  "dxapi": "1.0.0",
  "version": "1.1.0",
  "inputSpec": [
    {
      "name": "sample_vcf",
      "label": "Sample vcf",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.vcf", "*.vcf.gz"
      ],
      "help": "Sample vcf file"
    },
    {
      "name": "snp_site_vcf",
      "label": "Snp sites vcfp provided by somalier",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.vcf"
      ],
      "help": "vcf file containing sites to filter from sample vcf. Must be same build as reference genome."
    },
    {
      "name": "reference_genome",
      "label": "Reference genome",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.fa.gz"
      ],
      "help": "Reference genome (build 37/38)."
    },
    {
      "name": "reference_genome_index",
      "label": "Indexed reference genome",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.fasta-index.tar.gz"
      ],
      "help": "Indexed reference genome (build 37/38)."
    },
    {
      "name": "somalier_docker",
      "label": "Somalier Docker image",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.tar.gz"
      ],
      "help": "Somalier docker image"
    }
  ],
  "outputSpec": [
    {
      "name": "somalier_output",
      "label": "Binary somalier file",
      "class": "file",
      "patterns": [
        "*.somalier"
      ],
      "help": "Binary somalier file that contains extracted sites from sample vcf."
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 1
      }
    },
    "interpreter": "bash",
    "release": "20.04",
    "distribution": "Ubuntu",
    "file": "src/eggd_somalier_extract.sh",
    "version": "0"
  },
  "developers":[
    "org-emee_1"
  ],
  "authorizedUsers": [
    "org-emee_1"
  ],
  "access": {
    "project": "CONTRIBUTE",
    "allProjects": "VIEW"
  },
  "regionalOptions": {
    "aws:eu-central-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x2"
        }
      }
    }
  }
}
